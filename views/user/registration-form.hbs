<script>
    function validform() {

        var a = document.forms["my-form"]["fullname"].value;
        var b = document.forms["my-form"]["emailaddress"].value;
        var c = document.forms["my-form"]["permanentaddress"].value;
        var d = document.forms["my-form"]["pincode"].value;
        var e = document.forms["my-form"]["psw"].value;
         var f = document.forms["my-form"]["psw2"].value;

        if (a==null || a=="")
        {
             document.querySelector("#full_name").style.borderColor = "red";
              document.querySelector("#fullname-error").style.display = "block";

            return false;
        }
        else if (b==null || b=="")
        {
             document.querySelector("#email_address").style.borderColor = "red";
            document.querySelector("#full_name").style.borderColor = "#ced4da";
             document.querySelector("#fullname-error").style.display = "none";
            document.querySelector("#email-error").style.display = "block";
            return false;
        }
        else if (c==null || c=="")
        {
             document.querySelector("#permanent_address").style.borderColor = "red";
              document.querySelector("#full_name").style.borderColor = "#ced4da";
            document.querySelector("#email_address").style.borderColor = "#ced4da";
            document.querySelector("#fullname-error").style.display = "none";
             document.querySelector("#email-error").style.display = "none";
            document.querySelector("#address-error").style.display = "block";
            return false;
        }
        else if (d==null || d=="")
        {
             document.querySelector("#pincode").style.borderColor = "red";
              document.querySelector("#full_name").style.borderColor = "#ced4da";
               document.querySelector("#email_address").style.borderColor = "#ced4da";
            document.querySelector("#permanent_address").style.borderColor = "#ced4da";
            document.querySelector("#fullname-error").style.display = "none";
                document.querySelector("#email-error").style.display = "none";
                  document.querySelector("#address-error").style.display = "none";
            document.querySelector("#pincode-error").style.display = "block";
            return false;
        }
        else if (e==null || e=="")
        {
            document.querySelector("#psw-error").style.display = "block";
            document.querySelector("#psw").style.borderColor = "red";
             document.querySelector("#full_name").style.borderColor = "#ced4da";
              document.querySelector("#email_address").style.borderColor = "#ced4da";
                document.querySelector("#permanent_address").style.borderColor = "#ced4da";
                document.querySelector("#fullname-error").style.display = "none";
                    document.querySelector("#email-error").style.display = "none";
                     document.querySelector("#address-error").style.display = "none";
                      document.querySelector("#pincode-error").style.display = "none";
            document.querySelector("#pincode").style.borderColor = "#ced4da";
            return false;
        }
          else if (f==null || f=="")
        {
             document.querySelector("#psw2-error").style.display = "block";
            document.querySelector("#psw2").style.borderColor = "red";
             document.querySelector("#full_name").style.borderColor = "#ced4da";
              document.querySelector("#email_address").style.borderColor = "#ced4da";
                document.querySelector("#permanent_address").style.borderColor = "#ced4da";
                document.querySelector("#pincode").style.borderColor = "#ced4da";
                document.querySelector("#fullname-error").style.display = "none";
                    document.querySelector("#email-error").style.display = "none";
                     document.querySelector("#address-error").style.display = "none";
                        document.querySelector("#pincode-error").style.display = "none";
                         document.querySelector("#psw-error").style.display = "none";
            document.querySelector("#psw").style.borderColor = "#ced4da";
            return false;
        }
        else if(e!=f){
             document.querySelector("#psw2-error").style.display = "none";
            document.querySelector("#psww2-error").style.display = "block";
             document.querySelector("#psw2").style.borderColor = "red";
            return false;
        }

    }
</script>
